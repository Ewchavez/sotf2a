                  <li class="list-group-item d-flex justify-content-between align-items-center"> <%=@pro["nombre"] %> | <%=@pro["idsec"] %>
                    <span class="badge badge-primary badge-pill">Por atender  <%=@pro["d"] %>/4</span>
