
<%= render template: "layouts/profesores" %>
<div class="py-5" >
  <div class="container">

    <div class="row">
      <div class="col-md-3">
        <div>
    <a href="/asesoria_g/estado_reporte.pdf">Reporte Asesorias</a>  |    <a href="#">Mensajes</a>

      </div>

    </div>
  <hr>
    </div>
    <div class="row">


      <div class="col-md-3">

    <h1>Mis Cursos</h1>
        <div class="list-group">
          <%  for   @pro in  @todos      %>


          <a id="<%=@pro["idsec"]%>" href= "/asesoria_g/cursopselec?cursoselecto=<%=@pro["idsec"]%>" class="list-group-item list-group-item-action flex-column align-items-start">
            <div class="d-flex w-100 justify-content-between">
              <h5 class="mb-1"><%= @pro["nombre"] %> / <%= @pro["idsec"] %></h5>
              <small class="text-muted"># days ago</small>
            </div>
            <p class="mb-1">El salon cuenta con <%= @pro["capacidad"] %>  alumnos</p>
            <small class="text-muted">Donec id elit non mi porta.</small>
          </a>
          <br>
          <% end    %>



        </div>
      </div>





<!---------------------------------------------------------->



      <div class="col-md-3">
      <h1>Asesorias (+) </h1>
<%  if @mensaje2==true         %>
      <div class="list-group">
        <%  for   @pro in  @asesoria      %>



        <a id="<%=@pro["id"]%>" href= "/asesoria_g/cursoselec?cursoselecto=<%=@pro["id"]%>" class="list-group-item list-group-item-action flex-column align-items-start active">
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1"><%= @pro["lugar"] %> </h5>
            <small class="text-muted">~# days ago - <%= @horaactual%></small>
          </div>
          <p

          class="mb-1">La asesoria es el dia <%= @pro["fecha"] %> para el curso <%=@pro["nombre"]%>



           </p>
          <small class="text-muted">Donec id elit non mi porta.</small>
          <a href="/asesoria_g/eliminarasesoriaprof?asesorias= <%= @pro["id"] %>">Cancelar Asesorias</a>

        </a>
        <br>


        <% end    %>



      </div>
<br>

<%  end      %>
      </div>

